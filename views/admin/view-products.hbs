<section>
    <div class="container">
        <div class="row mt-4">
            <a style="" href="/admin/add-product" class=" btn bg-dark text-white font-weight-bold mt-5 ml-auto">Add Products</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Product-Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px ; height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
    </tr>
{{/each}}   
  </tbody>
</table>
    </div>
</section>