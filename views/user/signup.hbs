<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
        <h2 class="text-center">Sign Up</h2>
        <form action="/signup" method="post">
            <div class="form-group">
                <label >Name</label>
                <input type="text" required autocomplete="off" placeholder="Enter Name" name="Name" class="form-control">
            </div>
            <div class="form-group">
                <label >Email Address</label>
                <input type="email" required autocomplete="off" placeholder="Enter Email" name="Email" class="form-control">
            </div>
               <div class="form-group">
                <label >Password</label>
                <input type="password" required placeholder="Password" name="Password" class="form-control">
            </div>
            <a href="/login">Login ?</a>
            <button type="submit" class="btn btn-primary float-right">Sign Up</button>
        </form>
        </div>
    </div>
</div>